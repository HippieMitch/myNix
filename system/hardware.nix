    { device = "/dev/mapper/nixcrypt";
      fsType = "btrfs";
      options = [ "subvol=@nixos-config" "ssd" "noatime" "compress=zstd:1" ];
    };

  fileSystems."/var/log" =
    { device = "/dev/mapper/nixcrypt";
      fsType = "btrfs";
      options = [ "subvol=@log" "ssd" "noatime" "compress=zstd:1" ];
